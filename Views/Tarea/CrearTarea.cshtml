        <input asp-for="@Model.Descripcion" type="text" class="form-control"placeholder="Ejemplo: 3">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Color" class="form-label">Color</label>
        <input asp-for="@Model.Color" type="text" class="form-control"placeholder="Ejemplo: Azul">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.IdUsuarioAsignado" class="form-label">IdUsuarioAsignado</label>
        <input asp-for="@Model.IdUsuarioAsignado" type="text" class="form-control" >
    </div>
        <button type="submit" class="btn btn-primary">Crear</button>
</form>

