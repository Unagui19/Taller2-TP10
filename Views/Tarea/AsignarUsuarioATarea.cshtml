@{
    ViewData["Title"] = "Asignar usuario a una Tarea";
    string Title = "Asignar usuario a una Tarea";
}
@using Taller2_TP10.ViewModels
@model AsignarUsuarioViewModel

<h2>@Title</h2>

<form asp-controller="Tarea" asp-action="AsignarUsuarioATarea" method="post">
    <input hidden asp-for="@Model.IdTarea">
    <div class="mb-3">
        <label asp-for="@Model.IdTablero" class="form-label">Id del tablero asociado</label>
        <input disabled asp-for="@Model.IdTablero" type="text" class="form-control"placeholder="Ejemplo: 3">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.NombreTarea" class="form-label">Nombre de la tarea</label>
        <input disabled asp-for="@Model.NombreTarea" type="text" class="form-control" >
    </div>
    <div class="mb-3">
        <label asp-for="@Model.IdUsuarioAsignado" class="form-label">IdUsuarioAsignado</label>
        <input disabled asp-for="@Model.IdUsuarioAsignado" type="text" class="form-control"  >
    </div>
        <div class="mb-3">
        <label asp-for="@Model.IdUsuarioAsignado" class="form-label text-center">Usuarios disponibles</label>
        <select asp-for="@Model.IdUsuarioAsignado" class="form-select" aria-label="Default select example" >

        @foreach (@Model. in Enum.GetValues(typeof(Estado)))
        {
                <option value="@estado" selected>@estado</option>
        }
        </select>
    </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }  @*Es para la validacion en la parte del cliente*@
