@{
    ViewData["Title"] = "Home Page";
    string Title = "Listado de Usuarios";
}

@using Taller2_TP10.ViewModels
@model List<IndexUsuarioViewModel>

<h2>@Title</h2>

<table class="table table-primary">
    <thead>
        <tr>
            <th scope="col"> ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Rol</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <th scope= "row">@usuario.IdUsuario</th>
                <td>@usuario.Nombre</td>
                <td>@usuario.Rol</td>
                <td><a asp-controller="Usuario" asp-action="ModificarUsuario" asp-route-idUsuario="@usuario.IdUsuario">Modificar</a>
                <a asp-controller="Usuario" asp-action="EliminarUsuario" asp-route-idUsuario="@usuario.IdUsuario" onclick="return confirm('¿Seguro que quieres eliminar este usuario?')">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<button type="submit" class="btn btn-primary"><a class="nav-link text-white" asp-controller="Usuario" asp-action="CrearUsuario" >Crear</a></button>



