@{
    ViewData["Title"] = "Home Page";
}
@model List<Usuario>   
<H2>Lista de Usuarios</H2>

<table class="table table-primary">
    <thead>
        <tr>
            <th scope="col"> ID</th>
            <th scope="col">Nombre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <th scope= "row">@usuario.Id</th>
                <td>@usuario.NombreDeUsuario</td>
                <td><a asp-controller="Usuario" asp-action="ModificarUsuario" asp-route-idUsuario="@usuario.Id">Modificar</a>
                <a asp-controller="Usuario" asp-action="EliminarUsuario" asp-route-idUsuario="@usuario.Id" onclick="return confirm('¿Seguro que quieres eliminar este usuario?')">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<button type="submit" class="btn btn-primary"><a class="nav-link text-white" asp-controller="Usuario" asp-action="CrearUsuario" >Crear</a></button>



