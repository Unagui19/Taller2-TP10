@{
    ViewData["Title"] = "Crear Usuario";
    string Title = "Crear Usuario";
}
@model Usuario   

<h2>@Title</h2>

<form asp-controller="Usuario" asp-action="CrearUsuario" method="post">
    <div class="mb-3">
        <label asp-for="@Model.NombreDeUsuario" class="form-label">Nombre</label>
        <input asp-for="@Model.NombreDeUsuario" type="text" class="form-control"placeholder="Ejemplo: Franco">
    </div>
        <button type="submit" class="btn btn-primary">Crear</button>
</form>

