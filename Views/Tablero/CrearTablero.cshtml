@{  
    string Title = "Crear Tablero";
}
@model Tablero   

<h2>@Title</h2>

<form asp-controller="Tablero" asp-action="CrearTablero" method="post">

    <div class="mb-3">
        <label asp-for="@Model.IdUsuarioPropietario" class="form-label">Id de usuario propietario</label>
        <input asp-for="@Model.IdUsuarioPropietario" type="text" class="form-control"placeholder="Ejemplo: 3">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Nombre" class="form-label">Nombre</label>
        <input asp-for="@Model.Nombre" type="text" class="form-control" value="@Model.Nombre">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Descripcion" class="form-label">Descripcion</label>
        <input asp-for="@Model.Descripcion" type="text" class="form-control" value="@Model.Descripcion">
    </div>
        <button type="submit" class="btn btn-primary">Crear</button>
</form>

